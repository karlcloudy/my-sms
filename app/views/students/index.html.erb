<h1><i class="fa fa-graduation-cap"></i> Students</h1>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Full Name</th>
      <th scope="col">Email Address</th>
      <th scope="col">Date of Birth</th>
      <th scope="col">Gender</th>    
      <th scope="col" class="text-right">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.full_name %></td>
        <td><%= student.email %></td>
        <td><%= student.birth_date %></td>
        <td><%= student.gender %></td>
        <td class="text-right">
          <%= link_to student_path(student) do %>
            <i class="fa fa-search text-muted"></i>
          <% end %>
          &nbsp;
          <%= link_to edit_student_path(student) do %>
            <i class="fa fa-pencil text-muted"></i>
          <% end %>
          &nbsp;
          <%= link_to student, method: :delete, data: { confirm: "Deleting things causes them to be gone and regret to set in later. Are you sure you want to do this?" } do %>
            <i class="fa fa-trash text-danger"></i>
          <% end %>          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @students, renderer: BootstrapPagination::Rails, previous_label: 'Prev', next_label: 'Next', bootstrap: 3 %>
