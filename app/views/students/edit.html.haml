- content_for :title do
  Editing: 
  = @student.full_name
%h1
  %i.fa.fa-user
  Edit Student
.panel.panel-primary
  .panel-heading
    %h3.panel-title
      Editing
      = @student.full_name
  = form_for @student, html: { class: "panel-body" } do |f|
    - if @student.errors.any?
      #error_explanation.alert.alert-danger
        %i.fa.fa-exclamation-circle
        Your submission could not be saved due to the following
        = 'error'.pluralize(@student.errors.count)
        \:
        %ul
        - @student.errors.full_messages.each do |message|
          %li= message
    .form-row
      .form-group.col-md-2
        = f.label :title
        = f.collection_select :title_id, Title.order(:title).all, :id, :title, {}, { class: "form-control" }
      .form-group.col-md-3
        = f.label :first_name
        = f.text_field :first_name, class: "form-control"
      .form-group.col-md-3
        = f.label :middle_name
        = f.text_field :middle_name, class: "form-control"
      .form-group.col-md-4
        = f.label :last_name
        = f.text_field :last_name, class: "form-control"
    .form-row
      .form-group.col-md-8
        = f.label :email
        = f.text_field :email, class: "form-control"
      .form-group.col-md-2
        = f.label :birth_date
        = f.text_field :birth_date, type: 'date', min: '1900-01-01', max: Date.today, class: "form-control"
      .form-group.col-md-2
        = f.label :gender
        = f.select :gender, options_for_select({ 'Male' => 'M', 'Female' => 'F', 'Other' => 'O' }), {}, { class: "form-control" }
    .form-row.col-md-12
      = button_tag "Submit", class: "btn btn-primary" do
        %i.fa.fa-save
        Save
      = link_to "Cancel", :back, class: "btn btn-default"
